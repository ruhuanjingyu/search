<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:id="@+id/act_main"
    android:orientation="vertical">

    <include
        layout="@layout/activity_common_head"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include
        layout="@layout/activity_common_search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
    <ListView
        android:id="@+id/act_draff_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#f2f2f2"
        android:dividerHeight="1px"
        android:background="#ffffff"
        android:scrollbars="none" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f2f2f2"/>


    <include
        android:layout_alignParentBottom="true"
        layout="@layout/activity_mail_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      />
    </LinearLayout>
    
    	<LinearLayout 
    	    android:layout_height="match_parent"
    	    android:layout_width="match_parent"
    	    android:orientation="vertical"
    	    android:id="@+id/act_mail_search_more"
    	     android:visibility="gone">
        <include
        layout="@layout/activity_common_search_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
        <View android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/act_mail_out"
            android:background="#99666666"/>
        
   </LinearLayout>
    
     </RelativeLayout>
</LinearLayout>
